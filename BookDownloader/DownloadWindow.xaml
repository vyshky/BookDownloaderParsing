<Window x:Class="BookDownloader.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookDownloader"
        mc:Ignorable="d"
        
        Title="Выберите ссылку" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition  Height="5*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>
        <Label  x:Name="LableNameBook" Content="Без названия"/>
        <ListBox x:Name="LBUrlsDownload"  Grid.Row="1"/>
        <Button Click="SelectUrl" Grid.Row="2" Height="20" Width="100" VerticalAlignment="Bottom" Margin="10">Выбрать</Button>
    </Grid>
</Window>
